#Variáveis globais:
tentativas = 0
max_tentativas = 0
nick = ''

#Função para o cabeçario.
def cabeçario():
    print('''             \033[32m|-------------------|
             |---JOGO DA FORCA---|
             |-------------------|\033[m''')

#Função para perguntar a dificuldade.
def pedir_dificuldade():
    while True:
        try:
            dificuldade = int(input('''Em que dificuldade você deseja jogar?
                Insira o número 1 para fácil;
                Insira o número 2 para médio;
                Insira o número 3 para difícil:
                                '''))
            if dificuldade == 1:
                print('''Você selecionou a dificuldade: Fácil. Você terá \033[0;32m7 tentativas\033[m. Boa sorte!''')
                global max_tentativas 
                max_tentativas = 7
            elif dificuldade == 2:
                print('''Você selecionou a dificuldade: Médio. Você terá \033[0;32m6 tentativas\033[m. Boa sorte!''')
                max_tentativas = 6
            elif dificuldade == 3:
                print('''Você selecionou a dificuldade: Difícil. Você terá \033[0;32m5 tentativas\033[m. Boa sorte!''')
                max_tentativas = 5
        except Exception as erro:
            print(f'Infelizmente tivemos um problema! Tente novamente, digitando corretamente na próxima vez!')
        else:
            print('''Dificuldade inválida, "dificuldade média" foi selecionada por padrão. Você terá \033[0;32m6 tentativas\033[m. Boa sorte!''')
            max_tentativas = 6
            break
    return max_tentativas, dificuldade

#Função para pedir o nick do jogador.
def pedir_nick():
    global nick
    nick = input('Insira o seu nickname: ')
    return nick
