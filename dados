#Função para salvar o record no arquivo
def salvar_record(nick, dificuldade, tentativas):
    with open('arquivos/records.txt', 'a',) as arquivo_record_txt:
        arquivo_record_txt.write(f"{nick} - {dificuldade} - {tentativas}\n")

#Função para buscar dados de um jogador
def buscar_dados_jogador():
    nick = input("Digite o nick do jogador: ")
    with open('arquivos/records.txt', 'r',) as arquivo_record_txt:
        records = arquivo_record_txt.readlines()
    encontrados = []
    for record in records:
        if nick in record:
            encontrados.append(record.strip())
    if encontrados:
        print(f"\nRecords encontrados para '{nick}':")  
        for rec in encontrados:
            print(rec)
    else:
        print(f"Nenhum record encontrado para '{nick}'.")

#Função para mostrar todos os records
def mostrar_records():
    with open('arquivos/records.txt', 'r',) as arquivo_record_txt:
        records = arquivo_record_txt.readlines()
    if records:
        print("\nRecords:")
        for record in records:
            print(record.strip())
    else:
        print("Nenhum record encontrado.")
